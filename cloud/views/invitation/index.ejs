<br/>
<div class="row">
    <div class="col-md-2">
        <div class="list-group">
            <a href="/users/info" class="list-group-item">
                我的信息
            </a>
            <a href="/users/changepassword" class="list-group-item">修改密码</a>
            <a href="/users/pwdreset?username=<%=user%>" target="_blank" class="list-group-item">重置密码</a>
            <a href="/users/applyforedit" class="list-group-item">申请编辑</a>
            <a href="/invitation/index" class="list-group-item  active">我的邀请码</a>
        </div>

    </div>
    <div class="col-md-10">

        <%if(isedit){%>
        <% if(invitationcodes.length > 10){ %>
        <div class="alert alert-warning" role="alert">您的邀请次数已达上限！</div>
        <% }else{ %>
        <div class="row">
            <div class="col-md-12">

                <form role="form" action="/invitation/add" method="get">
                    <button type="submit" class="btn btn-default">生成邀请码</button>
                </form>
            </div>
        </div>
        <% } %>

        <br/>

        <div class="row">
            <div class="col-md-12">

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">我的邀请码</h3>
                    </div>
                    <ul class="list-group">
                        <% for(var i = 0;i < invitationcodes.length;i++){ %>
                        <% if(invitationcodes[i].isused){ %>

                        <li class="list-group-item list-group-item-warning">  <%= invitationcodes[i].code %>  <span
                                    style="float: right;" class="glyphicon glyphicon-remove"></span></li>
                        <% }else{ %>
                        <li class="list-group-item  list-group-item-success">  <%= invitationcodes[i].code %>
                            <span style="float: right;" class="glyphicon glyphicon-ok"></span>
                        </li>

                        <% } %>
                        <% } %>
                    </ul>
                </div>

            </div>
        </div>
        <%}else{%>
        <div class="alert alert-warning" role="alert">抱歉！您没有邀请权限！</div>
        <%}%>





    </div>
</div>

